{
  "declares": {
    "props": [
      "onSubmit",
      "onSetRandom",
      "random"
    ],
    "components": [
      "Form",
      "Input",
      "InputNumber",
      "Select",
      "Label"
    ]
  },
  "model": {
    "name": {
      "default": "",
      "type": "string",
      "required": true,
      "validators": [
        "required('{label}必填')"
      ],
      "label": "姓名",
      "placeholder": "请输入姓名"
    },
    "age": {
      "default": null,
      "type": "&int",
      "required": true,
      "validators": [
        "required('{label}必填')",
        "min(10, '{label}必须大于10')",
        "max(100, '{label}必须小于100')"
      ],
      "label": "年龄"
    },
    "sex": {
      "label": "性别",
      "default": "M",
      "options": [
        {
          "label": "男",
          "value": "M"
        },
        {
          "label": "女",
          "value": "F"
        }
      ],
      "disabled()": "age < 10",
      "required": true,
      "validators": [
        "required('{label}必填')"
      ]
    },
    "hobbies": {
      "default": [],
      "label": "爱好",
      "options": [
        { "label": "足球", "value": "football" },
        { "label": "篮球", "value": "basketball" },
        { "label": "乒乓球", "value": "pingpong" }
      ],
      "component": "CheckboxGroup"
    },
    "birth": {
      "default": "",
      "label": "出生",
      "options": [
        { "value": "1980" },
        { "value": "1990" },
        { "value": "2000" },
        { "value": "2010" },
        { "value": "2020" }
      ],
      "component": "RadioGroup"
    },
    "height": {
      "default": 0,
      "compute": "{ age * 5 }"
    },
    "pet": {
      "label": "宠物"
    },
    "<pet>": {
      "kind": {
        "default": "",
        "label": "种类"
      },
      "name": {
        "default": "",
        "label": "名字"
      }
    },
    "<books>": [
      {
        "title": {
          "default": "",
          "label": "书名"
        },
        "price": {
          "default": null,
          "label": "价格"
        }
      }
    ],
    "books": {
      "default": [{}]
    }
  },
  "layout": {
    "type": "Form",
    "class": "form",
    "props": {
      "target": "some-iframe",
      "action": "/",
      "method": "post"
    },
    "events": {
      "submit(e)": "{ onSubmit(e) }"
    },
    "children": [
      {
        "type": "div",
        "vars": {
          "x": 12
        },
        "children": [
          {
            "type": "Label",
            "children": [
              "变量"
            ]
          },
          {
            "type": "Input",
            "vars": {
              "value": "{ x + 'cm' }"
            },
            "props": {
              "value": "{ value }",
              "placeholder": "无模型支持的vars使用，vars.value 是从父级作用域传入进来生成的"
            },
            "events": {
              "change(v)": "{ value = v }"
            }
          }
        ]
      },
      {
        "type": "div",
        "children": [
          {
            "type": "Label",
            "bind": "name"
          },
          {
            "type": "Input",
            "bind": "name"
          }
        ]
      },
      {
        "type": "div",
        "children": [
          {
            "type": "Label",
            "children": [
              "{ age.label }"
            ]
          },
          {
            "type": "InputNumber",
            "props": {
              "type": "number",
              "value": "{ age.value }",
              "placeholder": "{ age.placeholder }",
              "required": "{ age.required }"
            },
            "events": {
              "change(value)": "{ age.value = value }"
            }
          }
        ]
      },
      {
        "type": "div",
        "visible": "{ age.value > 10 }",
        "children": [
          {
            "type": "Label",
            "children": [
              "{ sex.label }"
            ]
          },
          {
            "type": "Select",
            "props": {
              "options": "{ sex.options }",
              "value": "{ sex.value }",
              "placeholder": "{ sex.placeholder }",
              "required": "{ sex.required }",
              "disabled": "{ sex.disabled }"
            },
            "events": {
              "change(v)": "{ sex.value = v }"
            }
          }
        ]
      },
      {
        "type": "div",
        "children": [
          {
            "type": "Label",
            "bind": "hobbies"
          },
          {
            "bind": "hobbies"
          }
        ]
      },
      {
        "type": "div",
        "children": [
          {
            "type": "Label",
            "bind": "birth"
          },
          {
            "bind": "birth"
          }
        ]
      },
      {
        "type": "strong",
        "children": "宠物："
      },
      {
        "type": "div",
        "children": [
          {
            "type": "Label",
            "bind": "pet.kind"
          },
          {
            "type": "Input",
            "bind": "pet.kind"
          }
        ]
      },
      {
        "type": "div",
        "children": [
          {
            "type": "Label",
            "model": "{ pet.value }",
            "bind": "name"
          },
          {
            "type": "Input",
            "model": "pet",
            "bind": "name"
          }
        ]
      },
      {
        "type": "strong",
        "children": [
          "书籍列表：",
          {
            "type": "Button",
            "events": {
              "click()": "{ books.value.push({}) }"
            },
            "children": "添加"
          }
        ]
      },
      {
        "type": "div",
        "repeat": "book,index,books in books",
        "model": "{ book }",
        "children": [
          {
            "type": "div",
            "model": true,
            "children": [
              {
                "type": "Label",
                "model": true,
                "bind": "title"
              },
              {
                "type": "Input",
                "model": true,
                "bind": "title"
              }
            ]
          },
          {
            "type": "div",
            "model": true,
            "children": [
              {
                "type": "Label",
                "model": true,
                "bind": "price"
              },
              {
                "type": "Input",
                "model": true,
                "bind": "price"
              }
            ]
          },
          {
            "type": "Button",
            "events": {
              "click()": "{ books.remove(book) }"
            },
            "children": "删除"
          }
        ]
      },
      {
        "type": "br"
      },
      {
        "type": "br"
      },
      {
        "type": "div",
        "children": "{ random }"
      },
      {
        "type": "Button",
        "events": {
          "click": "{ onSetRandom }"
        },
        "children": "Random"
      },
      {
        "type": "p",
        "children": [
          {
            "type": "Button",
            "attrs": {
              "type": "submit"
            },
            "children": "查看结果"
          }
        ]
      }
    ]
  }
}
